  },
  "devDependencies": {
    "@biomejs/biome": "2.2.4",
    "@fast-check/vitest": "0.2.2",
    "@playwright/test": "1.55.1",
    "@tailwindcss/vite": "4.1.13",
    "@types/node": "24.6.0",
    "@types/react": "19.1.16",
    "@types/react-dom": "19.1.9",
